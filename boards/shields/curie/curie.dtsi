#include <dt-bindings/zmk/matrix_transform.h>
#include <dt-bindings/input/input-event-codes.h>
// #include <dt-bindings/lvgl/lvgl.h>


/ {
	chosen {
		zmk,physical-layout = &default_layout;
		zmk,kscan = &kscan0 ;
	};

	default_layout: default_layout {
		compatible = "zmk,physical-layout";
		display-name = "Default Layout";
		transform = <&default_transform>;
	};
	default_transform: keymap_transform_0 {
		compatible = "zmk,matrix-transform";
		columns = <10>;
		rows = <4>;
		// | SW1  | SW2  | SW3  | SW4  | SW5  | SW6  |   | SW6  | SW5  | SW4  | SW3  | SW2  | SW1  |
		// | SW7  | SW8  | SW9  | SW10 | SW11 | SW12 |   | SW12 | SW11 | SW10 | SW9  | SW8  | SW7  |
		// | SW13 | SW14 | SW15 | SW16 | SW17 | SW18 |   | SW18 | SW17 | SW16 | SW15 | SW14 | SW13 |
		//                      | SW19 | SW20 | SW21 |   | SW21 | SW20 | SW19 |
		map = <
		RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)     RC(0,5) RC(0,6) RC(0,7) RC(0,8) RC(0,9)
		RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)     RC(1,5) RC(1,6) RC(1,7) RC(1,8) RC(1,9)
		RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)     RC(2,5) RC(2,6) RC(2,7) RC(2,8) RC(2,9)
		RC(3,0) RC(3,1) RC(3,2)
		>;
	};

	kscan0: kscan {
		compatible = "zmk,kscan-gpio-matrix";
		wakeup-source;
		diode-direction = "row2col";
		row-gpios = <&gpio0 31 GPIO_ACTIVE_HIGH>,
		            <&gpio0 29 GPIO_ACTIVE_HIGH>,
		            <&gpio1 7 GPIO_ACTIVE_HIGH>,
		            <&gpio0 22 GPIO_ACTIVE_HIGH>;


	};

	qdec {
		compatible = "gpio-qdec";
		gpios = <&gpio1 1 GPIO_ACTIVE_HIGH>, <&gpio1 2 GPIO_ACTIVE_HIGH>;
		steps-per-period = <4>;
		zephyr,axis = <INPUT_REL_WHEEL>;
		sample-time-us = <2000>;
		idle-timeout-ms = <200>;
		status = "okay";
	};

	lvgl_encoder_input {
		compatible = "zephyr,lvgl-encoder-input";
		rotation-input-code = <INPUT_REL_WHEEL>;
		button-input-code = <INPUT_KEY_ENTER>;
		input = <&qdec>;
		status = "okay";
	};
	

